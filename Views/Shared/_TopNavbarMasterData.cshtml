<!DOCTYPE html>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <section class="content">
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#347FC4">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="Dashboard" asp-area="MasterData">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="Role" asp-area="MasterData">
                                Role
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn btn-orange dropdown-toggle" style="color:#ffffff" data-bs-toggle="dropdown" aria-expanded="false">
                                Users
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="UserActive" asp-area="MasterData">User</a></li>                                
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Position" asp-area="MasterData">Position</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Department" asp-area="MasterData">Department</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn btn-orange dropdown-toggle" style="color:#ffffff" data-bs-toggle="dropdown" aria-expanded="false">
                                Supplier
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Supplier" asp-area="MasterData">Supplier PKS</a></li>
                                <li><a class="dropdown-item" asp-action="NonPks" asp-controller="Supplier" asp-area="MasterData">Supplier Non-PKS</a></li>
                                <li><a class="dropdown-item" asp-action="NonActive" asp-controller="Supplier" asp-area="MasterData">Supplier Non-Active</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn btn-orange dropdown-toggle" style="color:#ffffff" data-bs-toggle="dropdown" aria-expanded="false">
                                Product
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Product" asp-area="MasterData">Product</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Category" asp-area="MasterData">Category</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Measurement" asp-area="MasterData">Measurement</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Discount" asp-area="MasterData">Discount</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="TermOfPayment" asp-area="MasterData">
                                Term Of Payment
                            </a>
                        </li>                        
                        <li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="Bank" asp-area="MasterData">
                                Bank
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn btn-orange dropdown-toggle" style="color:#ffffff" data-bs-toggle="dropdown" aria-expanded="false">
                                Warehouse
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="WarehouseLocation" asp-area="MasterData">Warehouse Location</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="UnitLocation" asp-area="MasterData">Unit Location</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="LeadTime" asp-area="MasterData">
                                Lead Time
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="InitialStock" asp-area="MasterData">
                                Calculate Min-Max Stock
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="Api" asp-area="MasterData">
                                Get Data API
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>        
        @RenderBody()
    </section>    
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: true)
    }
</body>
</html>
