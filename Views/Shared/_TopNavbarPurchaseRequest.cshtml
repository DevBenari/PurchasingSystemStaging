<!DOCTYPE html>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <section class="content">
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#347FC4">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                    <ul class="navbar-nav">
                        @*<li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="Dashboard" asp-area="Order">
                                Dashboard
                            </a>
                        </li>*@                        
                        <li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="PurchaseRequest" asp-area="Order">
                                Purchase Request <span class="badge bg-danger">@ViewBag.CountPurchaseRequest</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="btn btn-orange" style="color:#ffffff" asp-action="Index" asp-controller="Approval" asp-area="Order">
                                Approval <span class="badge bg-danger">@ViewBag.CountApproval</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @RenderBody()
    </section>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: true)
    }
</body>
</html>
