@{
    ViewData["Title"] = "List Purchase Order";
    Layout = "~/Views/Shared/_TopNavbarPurchaseOrder.cshtml";
}

@using PurchasingSystemStaging.Areas.Order.Models;
@using PurchasingSystemStaging.Models;
@using PurchasingSystemStaging.Repositories;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model Pagination<PurchaseOrder>
@{
    var searchTerm = ViewBag.SearchTerm as string;
    // Hitung nomor awal berdasarkan halaman dan ukuran halaman
    int itemNumber = (Model.CurrentPage - 1) * Model.PageSize + 1;
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-cyan">
                <div class="card-header">
                    <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
                </div>
                <!-- /.card-header -->
                <div class="card">
                    <div class="card-body">
                        <form enctype="multipart/form-data" id="filterForm" asp-action="RedirectToIndex" asp-controller="Dashboard" asp-area="Report" method="post" class="form-horizontal">
                            <div class="row">
                                <div class="col-md-5 input-group">
                                    <input type="date" name="startDate" id="startDate" class="date-input" value="@ViewBag.StartDate" placeholder="Select Start Date">
                                </div>
                                <div class="col-md-5 input-group">
                                    <input type="date" name="endDate" id="endDate" class="date-input" value="@ViewBag.EndDate" placeholder="Select End Date">
                                    <button type="submit" class="btn btn-default bg-indigo" id="btn-search"><i class="fa fa-search"></i></button>
                                </div>                                
                                <div class="col-md-2 input-group" data-target-input="nearest">                                    
                                    <div class="btn btn-default bg-indigo" id="btn-search" data-href="@Url.Action("RedirectToIndex", "Dashboard")">
                                        Save As PDF
                                    </div>
                                    <input type="hidden" name="page" value="1" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-body table-responsive p-0">
                        <table id="tblTemplate" class="table table-hover table-head-fixed text-nowrap">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 5%;">No</th>
                                    <th class="text-left" style="width: 15%;">Create Date</th>
                                    <th class="text-left" style="width: 15%;">Expired Date</th>
                                    <th class="text-left" style="width: 10%;">Create By</th>
                                    <th class="text-left" style="width: 10%;">PO Number</th>
                                    <th class="text-left" style="width: 10%;">PR Number</th>
                                    <th class="text-left" style="width: 10%;">Status</th>
                                    <th class="text-left" style="width: 10%;">Grand Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items.Any())
                                {
                                    @foreach (var po in Model.Items)
                                    {
                                        <tr>
                                            <th class="text-center">@itemNumber</th>
                                            <td class="text-left">@po.CreateDateTime.ReadStringDate()</td>
                                            <td class="text-left">@po.ExpiredDate.ReadStringDate()</td>
                                            <td class="text-left">@po.ApplicationUser.NamaUser</td>
                                            <td>@po.PurchaseOrderNumber</td>
                                            <td>@po.PurchaseRequestNumber</td>
                                            @if (po.Status == "In Order")
                                            {
                                                <td><b>@po.Status</b></td>
                                            }
                                            else if (po.Status == "Cancelled")
                                            {
                                                <td><div style="color:red"><b>@po.Status</b></div></td>
                                            }
                                            else if (po.Status == "Process Cancel")
                                            {
                                                <td><div style="color:darkorange"><b>@po.Status</b></div></td>
                                            }
                                            else
                                            {
                                                <td><div style="color:forestgreen"><b>@po.Status</b></div></td>
                                            }
                                            <td>Rp @Math.Truncate(po.GrandTotal)</td>
                                        </tr>
                                        itemNumber++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3">No purchase orders found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @* Pagination *@
                        <div>
                            <p class="pagination-info">Page @Model.CurrentPage of @Model.TotalPages</p>
                            <div class="pagination-container">
                                <ul class="pagination">
                                    @{
                                        int startPage = ((Model.CurrentPage - 1) / 10) * 10 + 1;
                                        int endPage = Math.Min(startPage + 9, Model.TotalPages);
                                    }

                                    @if (startPage > 1)
                                    {
                                        <li>
                                            <div class="pagination-link" data-href="@Url.Action("RedirectToIndex", "PurchaseOrder", new { page = startPage - 10, pageSize = Model.PageSize })">
                                                Previous 10
                                            </div>
                                            @* <a class="pagination-link" asp-action="RedirectToIndex" asp-route-page="@(startPage - 10)" asp-route-pageSize="@Model.PageSize">Previous 10</a> *@
                                        </li>
                                    }

                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li>
                                            <div class="pagination-link" id="btn-previous" data-href="@Url.Action("RedirectToIndex", "PurchaseOrder", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize })">
                                                Previous
                                            </div>
                                            @* <a class="pagination-link" asp-action="RedirectToIndex" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">Previous</a> *@
                                        </li>
                                    }

                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="@(i == Model.CurrentPage ? "active" : "")">
                                            <div class="pagination-link" data-href="@Url.Action("RedirectToIndex", "PurchaseOrder", new { page = i, pageSize = Model.PageSize })">
                                                @i
                                            </div>
                                            @* <a class="pagination-link" asp-action="RedirectToIndex" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a> *@
                                        </li>
                                    }

                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li>
                                            <div class="pagination-link" id="btn-next" data-href="@Url.Action("RedirectToIndex", "PurchaseOrder", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize })">
                                                Next
                                            </div>
                                            @* <a class="pagination-link" asp-action="RedirectToIndex" asp-route-encryptedPath="@ViewBag.EncryptedPath" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@ViewBag.SearchTerm">Next</a> *@
                                        </li>
                                    }

                                    @if (endPage < Model.TotalPages)
                                    {
                                        <li>
                                            @* <a class="pagination-link" asp-action="RedirectToIndex" asp-route-page="@(endPage + 1)" asp-route-pageSize="@Model.PageSize">Next 10</a> *@
                                            <div class="pagination-link" data-href="@Url.Action("RedirectToIndex", "PurchaseOrder", new { page = endPage + 1, pageSize = Model.PageSize })">
                                                Next 10
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                    </div>
                    <span class="error">* Double click in the table row to open data</span>
                </div>

                <!-- /.card-body -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Success", '@TempData["SuccessMessage"]', "success");
                        };
                    </script>
                }
                @if (TempData["WarningMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Failed", '@TempData["WarningMessage"]', "warning");
                        };
                    </script>
                }
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts{
    <link href="~/scripts/pagination.css" rel="stylesheet" />
    <script src="~/scripts/paginationjquery.js"></script>
    <link href="~/scripts/buttonsejajarindex.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.getElementById("filterOptions").addEventListener("change", function () {
            // Kirim form secara otomatis saat opsi dipilih
            document.getElementById("filterForm").submit();
        });
    </script>

    <style>
        tr[data-href] {
            cursor: pointer;
        }
    </style>

        @*Start Jquery Date Range Tidak Bisa Dipisah Beda Halaman*@
    <script>
        $(document).ready(function () {
            // Ketika input difokuskan
            $(".date-input").focus(function () {
                $(this).prev(".date-label").css({
                    "color": "#007BFF",
                    "font-size": "12px",
                    "transform": "translateY(-20px)",
                    "transition": "0.3s ease-in-out"
                });
            });

            // Ketika input kehilangan fokus dan tidak ada nilai
            $(".date-input").blur(function () {
                if ($(this).val() === "") {
                    $(this).prev(".date-label").css({
                        "color": "#333",
                        "font-size": "14px",
                        "transform": "translateY(0)",
                        "transition": "0.3s ease-in-out"
                    });
                }
            });
        });

        // Inisialisasi Flatpickr
        flatpickr("#startDate", {
            dateFormat: "Y-m-d",
            //defaultDate: "today"
        });

        flatpickr("#endDate", {
            dateFormat: "Y-m-d",
            //defaultDate: "today"
        });
    </script>
        @*End Jquery Date Range Tidak Bisa Dipisah Beda Halaman*@
}