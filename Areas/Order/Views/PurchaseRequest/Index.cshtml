@{
    ViewData["Title"] = "List Purchase Request";
    Layout = "~/Views/Shared/_TopNavbarPurchaseRequest.cshtml";
}

@using PurchasingSystemStaging.Areas.Order.Models;
@using PurchasingSystemStaging.Models;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model IEnumerable<PurchaseRequest>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-cyan">
                <div class="card-header">
                    <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>

                    <div class="card-tools">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <a class="btn btn-tool bg-indigo" asp-action="CreatePurchaseRequest" asp-controller="PurchaseRequest" asp-area="Order">
                                <i class="fas fa-plus"></i>
                            </a>
                        }
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form enctype="multipart/form-data" asp-action="Index" asp-controller="PurchaseRequest" method="post" class="form-horizontal">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group date" id="tglAwalPencarian" data-target-input="nearest">
                                        <div class="input-group-append" data-target="#tglAwalPencarian" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                        <input autocomplete="off" value="@ViewBag.tglAwalPencarian" name="tglAwalPencarian" type="text" class="form-control datetimepicker-input" placeholder="Search start date..." readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <div class="input-group date" id="tglAkhirPencarian" data-target-input="nearest">
                                            <div class="input-group-append" data-target="#tglAkhirPencarian" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                            <input autocomplete="off" value="@ViewBag.tglAkhirPencarian" name="tglAkhirPencarian" type="text" class="form-control datetimepicker-input" placeholder="Search end date..." readonly />
                                            <button type="submit" class="btn btn-default" id="btn-search">
                                                <i class="fa fa-search"></i>
                                            </button>
                                            <a class="btn bg-indigo" asp-action="Index" asp-controller="UserActive" asp-area="MasterData">
                                                <i class="fa-solid fa-arrows-rotate"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-3">
                                <div class="form-group">
                                    <select class="form-control" name="filterOptions" id="btnFilterBy">
                                        <option value="" hidden disabled selected>--Filter by--</option>
                                        <option value="Today" selected=@(ViewBag.SelectedFilter == "Today")>Today</option>
                                        <option value="Last Day" selected=@(ViewBag.SelectedFilter == "Last Day")>Last Day</option>
                                        <option value="Last 7 Days" selected=@(ViewBag.SelectedFilter == "Last 7 Days")>Last 7 Days</option>
                                        <option value="Last 30 Days" selected=@(ViewBag.SelectedFilter == "Last 30 Days")>Last 30 Days</option>
                                        <option value="This Month" selected=@(ViewBag.SelectedFilter == "This Month")>This Month</option>
                                        <option value="Last Month" selected=@(ViewBag.SelectedFilter == "Last Month")>Last Month</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="card-body table-responsive p-0">
                            <table id="tblTemplate" class="table table-hover table-head-fixed text-wrap">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="width: 5%;">No</th>
                                        <th class="text-left" style="width: 15%;">Create Date</th>
                                        <th class="text-left" style="width: 15%;">Expired Date</th>
                                        <th class="text-left" style="width: 10%;">Expired Day</th>
                                        <th class="text-left" style="width: 10%;">Remaining Day</th>
                                        <th class="text-left" style="width: 10%;">Create By</th>
                                        <th class="text-left" style="width: 15%;">Approve 1</t>
                                        <th class="text-left" style="width: 15%;">Approve 2</th>
                                        <th class="text-left" style="width: 15%;">Approve 3</th>
                                        <th class="text-left" style="width: 10%;">PR Number</th>
                                        <th class="text-left" style="width: 10%;">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pr in Model)
                                    {
                                        <tr data-href="@Url.Action("DetailPurchaseRequest", "PurchaseRequest", new {id=pr.PurchaseRequestId})">
                                            <td class="text-left"></td>
                                            <td class="text-left">@pr.CreateDateTime.ToString("dd MMMM yyyy")</td>
                                            <td class="text-left">@pr.ExpiredDate.ToString("dd MMMM yyyy")</td>
                                            <td class="text-left">@pr.ExpiredDay day</td>
                                            <td class="text-left">@pr.RemainingDay day</td>
                                            <td class="text-left">@pr.ApplicationUser.NamaUser</td>
                                            @if (pr.ApproveStatusUser1 == "Approve")
                                            {
                                                <td class="text-left"><span class="badge bg-success"><b>@pr.UserApprove1.FullName</b></span></td>
                                            }
                                            else if (pr.ApproveStatusUser1 == "Reject")
                                            {
                                                <td class="text-left"><span class="badge bg-danger"><b>@pr.UserApprove1.FullName</b></span></td>
                                            }
                                            else
                                            {
                                                <td class="text-left"><span class="badge"><b>@pr.UserApprove1.FullName</b></span></td>
                                            }
                                            @if (pr.ApproveStatusUser2 == "Approve")
                                            {
                                                <td class="text-left"><span class="badge bg-success"><b>@pr.UserApprove2.FullName</b></span></td>
                                            }
                                            else if (pr.ApproveStatusUser2 == "Reject")
                                            {
                                                <td class="text-left"><span class="badge bg-danger"><b>@pr.UserApprove2.FullName</b></span></td>
                                            }
                                            else
                                            {
                                                <td class="text-left"><span class="badge"><b>@pr.UserApprove2.FullName</b></span></td>
                                            }
                                            @if (pr.ApproveStatusUser3 == "Approve")
                                            {
                                                <td class="text-left"><span class="badge bg-success"><b>@pr.UserApprove3.FullName</b></span></td>
                                            }
                                            else if (pr.ApproveStatusUser3 == "Reject")
                                            {
                                                <td class="text-left"><span class="badge bg-danger"><b>@pr.UserApprove3.FullName</b></span></td>
                                            }
                                            else
                                            {
                                                <td class="text-left"><span class="badge"><b>@pr.UserApprove3.FullName</b></span></td>
                                            }
                                            <td>@pr.PurchaseRequestNumber</td>

                                            @if (pr.Status == "Waiting Approval")
                                            {
                                                <td class="text-left"><span class="badge bg-danger"><b>@pr.Status</b></span></td>
                                            }
                                            else if (pr.Status == "Approve")
                                            {
                                                <td class="text-left"><span class="badge bg-success"><b>@pr.Status</b></span></td>
                                            }
                                            else
                                            {
                                                <td class="text-left"><b>@pr.Status</b></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <span class="error">* Double click in the row table to get data</span>
                    </form>
                </div>
                <!-- /.card-body -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Success", '@TempData["SuccessMessage"]', "success");
                        };
                    </script>
                }
                @if (TempData["WarningMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Failed", '@TempData["WarningMessage"]', "warning");
                        };
                    </script>
                }
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts{
    <script src="~/scripts/tabletemplate.js"></script>
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })
        })
    </script>
    <script>
        $(document).ready(function () {
            $('#btnFilterBy').on('change', function () {
                $('.datetimepicker-input').val('');
                $(this).closest('form').submit();
            });

            // Initialize date pickers
            $('#tglAwalPencarian').datetimepicker({
                format: 'DD MMMM YYYY',
                timepicker: false,
                enableHours: false,
                ignoreReadonly: true,
                allowInputToggle: true,
                useCurrent: false,
                keepOpen: false,
                mask: true

            })

            $('#tglAkhirPencarian').datetimepicker({
                format: 'DD MMMM YYYY',
                timepicker: false,
                enableHours: false,
                ignoreReadonly: true,
                allowInputToggle: true,
                useCurrent: false,
                keepOpen: false,
                mask: true
            })

            $('#btn-search').on('click', function () {
                $('#btnFilterBy').val('');
            })

            $('.datetimepicker-input').on('keydown paste ', function (e) {
                e.preventDefault();
                return false;
            });

            $('.datetimepicker-input').on('focus', function () {
                $(this).closest('.input-group').find('.input-group-append').click();
            });
        });
    </script>

    <style>
        tr[data-href] {
            cursor: pointer;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");

            rows.forEach(row => {
                row.addEventListener("dblclick", () => {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>

    <style>
        span.error {
            display: block;
            color: #347FC4;
            font-size: 90%;
        }

        tr.error {
            background-color: rgba(255,0,0,0.35);
        }

        /*css for table*/
        .container td {
            vertical-align: top;
        }

        .tablecontainer table {
            width: 100%;
            border-collapse: collapse;
            border-top: 1px solid #BFAEAE;
            border-right: 1px solid #BFAEAE;
        }

        .tablecontainer th {
            border-bottom: 2px solid #BFAEAE;
        }

        .tablecontainer th, .tablecontainer td {
            text-align: center;
            border-left: 1px solid #BFAEAE;
            padding: 5px;
            border-bottom: 1px solid #BFAEAE;
        }

        .ui-widget {
            font-size: 12px !important;
        }
    </style>
}