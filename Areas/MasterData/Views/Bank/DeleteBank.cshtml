@{
    ViewBag.Title = "Delete Bank";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

@using PurchasingSystem.Areas.MasterData.ViewModels;


@model BankViewModel

<div class="card card-cyan">
    <div class="card-header">
        <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
    </div>


    <form enctype="multipart/form-data" asp-controller="Bank" asp-action="DeleteBank" asp-area="MasterData" method="post" class="form-horizontal">
        <div class="card-body">
            <h4>Yakin hapus data ini?</h4>
            <hr />
            <input hidden asp-for="BankId" />
            <input hidden asp-for="BankCode" />
            <input hidden asp-for="BankName" />
            <div class="post">
                <div class="user-block">
                    <span class="username">
                        <a href="#">@Html.DisplayFor(model => model.BankName)</a>
                    </span>
                    <span class="description">@Html.DisplayFor(model => model.BankCode)</span>
                </div>
                <!-- /.user-block -->
            </div>
        </div>

        <div class="card-footer">
            @*<form asp-action="DeletePengguna" method="post">*@
            @*<a class="btn btn-default" asp-action="Index" asp-controller="Bank" asp-area="MasterData">Batal</a>*@
            <div class="btn btn-default" data-href="@Url.Action("Index", "Bank", new { area = "MasterData" })">Cancel</div>
            <button type="submit" class="btn btn-danger float-left fw-bold"><div style="color:#ffffff">Hapus</div></button>
            @*</form>*@
        </div>
    </form>
</div>
