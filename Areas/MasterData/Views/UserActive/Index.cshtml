@{
    ViewData["Title"] = "List User";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

@using Microsoft.AspNetCore.Identity;
@using PurchasingSystemStaging.Areas.MasterData.Models;
@using PurchasingSystemStaging.Models;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model IEnumerable<UserActive>

<!-- Tempusdominus Bootstrap 4 -->
<link rel="stylesheet" href="~/admin/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-cyan">
                <div class="card-header">
                    <h3 class="card-title" style="color:#ffffff"><b>@ViewBag.Title</b></h3>

                    <div class="card-tools">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <a class="btn btn-tool bg-indigo" asp-action="CreateUserActive" asp-controller="UserActive" asp-area="MasterData">
                                <i class="fas fa-plus"></i>
                            </a>
                        }
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form enctype="multipart/form-data" asp-action="Index" asp-controller="UserActive" method="post" class="form-horizontal">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group date" id="tglAwalPencarian" data-target-input="nearest">
                                        <div class="input-group-append" data-target="#tglAwalPencarian" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                        <input autocomplete="off" value="@ViewBag.tglAwalPencarian" name="tglAwalPencarian" type="text" class="form-control datetimepicker-input" placeholder="Search start date..." readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <div class="input-group date" id="tglAkhirPencarian" data-target-input="nearest">
                                            <div class="input-group-append" data-target="#tglAkhirPencarian" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                            <input autocomplete="off" value="@ViewBag.tglAkhirPencarian" name="tglAkhirPencarian" type="text" class="form-control datetimepicker-input" placeholder="Search end date..." readonly />
                                            <button type="submit" class="btn btn-default" id="btn-search">
                                                <i class="fa fa-search"></i>
                                            </button>
                                            <a class="btn bg-indigo" asp-action="Index" asp-controller="UserActive" asp-area="MasterData">
                                                <i class="fa-solid fa-arrows-rotate"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-3">
                                <div class="form-group">
                                    <select class="form-control" name="filterOptions" id="btnFilterBy">
                                        <option value="" hidden disabled selected>--Filter by--</option>
                                        <option value="Today" selected=@(ViewBag.SelectedFilter == "Today")>Today</option>
                                        <option value="Last Day" selected=@(ViewBag.SelectedFilter == "Last Day")>Last Day</option>
                                        <option value="Last 7 Days" selected=@(ViewBag.SelectedFilter == "Last 7 Days")>Last 7 Days</option>
                                        <option value="Last 30 Days" selected=@(ViewBag.SelectedFilter == "Last 30 Days")>Last 30 Days</option>
                                        <option value="This Month" selected=@(ViewBag.SelectedFilter == "This Month")>This Month</option>
                                        <option value="Last Month" selected=@(ViewBag.SelectedFilter == "Last Month")>Last Month</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="card-body table-responsive p-0">
                            <table id="tblTemplate" class="table table-hover table-head-fixed text-wrap">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Photo</th>
                                        <th>Create Date</th>
                                        <th>User Code</th>
                                        <th>Fullname</th>
                                        <th>Department</th>
                                        <th>Position</th>
                                        <th>Date Of Birth</th>
                                        <th>Address</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        var imagePath = "/UserPhoto/" + (user.Foto ?? "user.jpg");

                                        <tr data-href="@Url.Action("DetailUserActive", "UserActive", new {id=user.UserActiveId})">
                                            <th></th>
                                            <td><img src="@imagePath" height="50px;" width="50px;" /></td>
                                            <td>@user.CreateDateTime.ToString("dd MMMM yyyy")</td>
                                            <td>@user.UserActiveCode</td>
                                            <td>@user.FullName</td>
                                            <td>@user.Department.DepartmentName</td>
                                            <td>@user.Position.PositionName</td>
                                            <td>@user.DateOfBirth.ToString("dd MMMM yyyy")</td>
                                            <td>@user.Address</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <span class="error">* Double click in the table row to open data</span>
                    </form>
                </div>
                <!-- /.card-body -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Success", '@TempData["SuccessMessage"]', "success");
                        };
                    </script>
                }
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts{
    <script src="~/scripts/tabletemplate.js"></script>
    <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    
    <script>
        // Add this script at the bottom of your view or in a separate JS file
        $(document).ready(function () {
            $('#btnFilterBy').on('change', function () {
                $('.datetimepicker-input').val('');
                $(this).closest('form').submit();
            });

            // Initialize date pickers
            $('#tglAwalPencarian').datetimepicker({
                        format: 'DD MMMM YYYY',
                        timepicker: false,
                        enableHours: false,
                        ignoreReadonly: true,
                        allowInputToggle: true,
                        useCurrent: false,
                        keepOpen: false,
                        mask: true

            })

            $('#tglAkhirPencarian').datetimepicker({
                format: 'DD MMMM YYYY',
                timepicker: false,
                enableHours: false,
                ignoreReadonly: true,
                allowInputToggle: true,
                useCurrent: false,
                keepOpen: false,
                mask: true

            })

            $('#btn-search').on('click', function() {
                $('#btnFilterBy').val('');
            }) 

            $('.datetimepicker-input').on('keydown paste ', function (e) {
                e.preventDefault();
                return false;
            });

            $('.datetimepicker-input').on('focus', function () {
                $(this).closest('.input-group').find('.input-group-append').click();
            });

    // Clear any existing table data
        $('#tblTemplate tbody').empty();

        // Initialize DataTable
        var table = $('#tblTemplate').DataTable({
            "processing": true,
            "serverSide": false,
            "ajax": {
                "url": "/MasterData/UserActive/Index",
                "type": "POST",
                "data": function(d) {
                    d.filterOptions = $('#btnFilterBy').val();
                    d.tglAwalPencarian = $('#tglAwalPencarian').find('input').val();
                    d.tglAkhirPencarian = $('#tglAkhirPencarian').find('input').val();
                    // Add anti-forgery token if needed
                    d.__RequestVerificationToken = $('input[name="__RequestVerificationToken"]').val();
                }
            },
            "columns": [
                { "data": null, "orderable": false },
                { 
                    "data": "foto",
                    "render": function(data) {
                        return `<img src="${data}" height="50px;" width="50px;" />`;
                    }
                },
                { "data": "createDate" },
                { "data": "userCode" },
                { "data": "fullName" },
                { "data": "department" },
                { "data": "position" },
                { "data": "dateOfBirth" },
                { "data": "address" }
            ],
            "order": [[1, "asc"]], 
            "pagingType": "full_numbers", 
            "lengthChange": true, 
            "responsive": true,
            "rowCallback": function(row, data) {
                $(row).attr('data-href', `/MasterData/UserActive/DetailUserActive?id=${data.userActiveId}`);
            }
            
        });

    // Add row numbers
    table.on('draw.dt', function () {
        table.column(0, {search:'applied', order:'applied'}).nodes().each(function (cell, i) {
            cell.innerHTML = i + 1;
        });
    });

    // Handle filter dropdown change
    $('#btnFilterBy').on('change', function() {
        // Clear date inputs when using predefined filters
        if ($(this).val()) {
            $('#tglAwalPencarian').find('input').val('');
            $('#tglAkhirPencarian').find('input').val('');
        }
        table.ajax.reload();
    });

    // Handle double click on row
        $('#tblTemplate tbody').on('dblclick', 'tr', function () {
            window.location = $(this).data('href');
        });
    });

    // Global function for filter
    function filterUsers() {
        if ($.fn.DataTable.isDataTable('#tblTemplate')) {
            $('#tblTemplate').DataTable().ajax.reload();
        }
}
    </script>

    <style>
        tr[data-href] {
            cursor: pointer;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");

            rows.forEach(row => {
                row.addEventListener("dblclick", () => {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>

    <style>
        span.error {
            display: block;
            color: #347FC4;
            font-size: 90%;
        }

        tr.error {
            background-color: rgba(255,0,0,0.35);
        }

        /*css for table*/
        .container td {
            vertical-align: top;
        }

        .tablecontainer table {
            width: 100%;
            border-collapse: collapse;
            border-top: 1px solid #BFAEAE;
            border-right: 1px solid #BFAEAE;
        }

        .tablecontainer th {
            border-bottom: 2px solid #BFAEAE;
        }

        .tablecontainer th, .tablecontainer td {
            text-align: center;
            border-left: 1px solid #BFAEAE;
            padding: 5px;
            border-bottom: 1px solid #BFAEAE;
        }

        .ui-widget {
            font-size: 12px !important;
        }
    </style>
}