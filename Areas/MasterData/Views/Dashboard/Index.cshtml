@{
    ViewData["Title"] = "Dashboard Master Data";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

<!-- Main content -->
<section class="content">
    <!-- Info boxes -->
    <div class="row">
        <div class="col-12">
            <!-- Widget: user widget style 1 -->
            <div class="card card-widget widget-user">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-info">
                    <h1 class="widget-user-username"><b>@ViewBag.Title</b></h1>
                    @*<h5 class="widget-user-desc">Founder & CEO</h5>*@
                </div>
                <div class="widget-user-image">
                    @*<img class="img-circle elevation-2" src="../dist/img/user1-128x128.jpg" alt="User Avatar">*@
                </div>                
            </div>
            <!-- /.widget-user -->
        </div>
    </div>
    <!-- /.row -->
    <div class="row mb-2">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <a asp-controller="UserActive" asp-action="Index" asp-area="MasterData">
                <div class="small-box " style="background-color:#347FC4">
                    @*change color in adminlte.min.cs*@
                    <div class="inner">
                        <h4 class="fw-bold" style="color:#ffffff">User</h4>
                        <p style="color:#ffffff">Total @ViewBag.CountUser User</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                </div>
            </a>
        </div>        
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <a asp-controller="Supplier" asp-action="Index" asp-area="MasterData">
                <div class="small-box " style="background-color:#347FC4">
                    @*change color in adminlte.min.cs*@
                    <div class="inner">
                        <h4 class="fw-bold" style="color:#ffffff">Supplier</h4>
                        <p style="color:#ffffff">Total @ViewBag.CountSupplier Supplier</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <a asp-controller="UnitLocation" asp-action="Index" asp-area="MasterData">
                <div class="small-box " style="background-color:#347FC4">
                    @*change color in adminlte.min.cs*@
                    <div class="inner">
                        <h4 class="fw-bold" style="color:#ffffff">Unit Location</h4>
                        <p style="color:#ffffff">Total @ViewBag.CountUnitLocation Unit Location</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-route"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <a asp-controller="WarehouseLocation" asp-action="Index" asp-area="MasterData">
                <div class="small-box " style="background-color:#347FC4">
                    @*change color in adminlte.min.cs*@
                    <div class="inner">
                        <h4 class="fw-bold" style="color:#ffffff">Warehouse Location</h4>
                        <p style="color:#ffffff">Total @ViewBag.CountWarehouseLocation Warehouse Location</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-building"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <a asp-controller="Product" asp-action="Index" asp-area="MasterData">
                <div class="small-box " style="background-color:#347FC4">
                    @*change color in adminlte.min.cs*@
                    <div class="inner">
                        <h4 class="fw-bold" style="color:#ffffff">Product</h4>
                        <p style="color:#ffffff">Total @ViewBag.CountProduct Product</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-heartbeat"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <a asp-controller="Category" asp-action="Index" asp-area="MasterData">
                <div class="small-box " style="background-color:#347FC4">
                    @*change color in adminlte.min.cs*@
                    <div class="inner">
                        <h4 class="fw-bold" style="color:#ffffff">Category</h4>
                        <p style="color:#ffffff">Total @ViewBag.CountCategory Category</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-clone"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <a asp-controller="Measurement" asp-action="Index" asp-area="MasterData">
                <div class="small-box " style="background-color:#347FC4">
                    @*change color in adminlte.min.cs*@
                    <div class="inner">
                        <h4 class="fw-bold" style="color:#ffffff">Measurement</h4>
                        <p style="color:#ffffff">Total @ViewBag.CountMeasurement Measurement</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-ruler-combined"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <a asp-controller="Discount" asp-action="Index" asp-area="MasterData">
                <div class="small-box " style="background-color:#347FC4">
                    @*change color in adminlte.min.cs*@
                    <div class="inner">
                        <h4 class="fw-bold" style="color:#ffffff">Discount</h4>
                        <p style="color:#ffffff">Total @ViewBag.CountDiscount Discount</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-balance-scale-right"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->