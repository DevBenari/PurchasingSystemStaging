@{
    ViewData["Title"] = "Detail Lead Time";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

@using Microsoft.AspNetCore.Identity;
@using PurchasingSystemStaging.Areas.MasterData.ViewModels;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model LeadTimeViewModel

<!-- Tempusdominus Bootstrap 4 -->
<link rel="stylesheet" href="~/admin/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12 bg-white">
            <form enctype="multipart/form-data" asp-controller="LeadTime" asp-action="DetailLeadTime" method="post" class="form-horizontal">
                <div class="card-header bg-cyan">
                    <h3 class="card-title fw-bold" style="color:#ffffff">@ViewBag.Title</h3>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-0"></div>
                            <div class="col-md-12">
                                <input hidden asp-for="LeadTimeId" />
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <label asp-for="LeadTimeCode"></label>
                                        <input type="text" asp-for="LeadTimeCode" class="form-control form-control-border border-width-2" id="LeadTimeCode" placeholder="Lead Time Code" readonly disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <label asp-for="LeadTimeValue"></label>
                                        <input maxlength="100" autocomplete="off" autofocus type="text" asp-for="LeadTimeValue" class="form-control form-control-border border-width-2" id="LeadTimeValue" placeholder="Lead Time Value" disabled>
                                        <span asp-validation-for="LeadTimeValue" class="text-danger"></span>
                                    </div>
                                </div>                               
                            </div>
                            <div class="col-md-0"></div>
                        </div>
                    </div>
                </div>
             
                <!-- start button footer -->
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-0"></div>
                            <div class="col-md-12">
                                <div class="row">
                                    <button type="submit" class="btn btn-primary bg-indigo float-left fw-bold" id="btnsimpan"><div style="color:#ffffff">Save</div></button>
                                    <a class="btn bg-indigo" id="btnubah">Change</a>
                                    <a class="btn btn-default" id="btnbatalubah">Cancel Change</a>
                                    <a class="btn btn-danger" asp-action="DeleteLeadTime" asp-controller="LeadTime" asp-area="MasterData" asp-route-id="@Model.LeadTimeId" id="btnhapus">Delete</a>
                                    <a class="btn btn-default" asp-action="Index" asp-controller="LeadTime" asp-area="MasterData" id="btnbatal">Cancel</a>
                                </div>
                            </div>
                            <div class="col-md-0"></div>
                        </div>
                    </div>
                </div>
             
                <!-- /.end button footer -->
                @section Scripts {
                    <script>
                        $(function () {
                            //Initialize Select2 Elements
                            $('.select2bs4').select2({
                                theme: 'bootstrap4'
                            })
                        })
                    </script>

                    <script>
                        $(function () {
                            $("#btnsimpan").hide();
                            $("#btnbatalubah").hide();

                            $("#btnubah").click(function () {
                                $("#btnubah").hide();
                                $("#btnhapus").hide();
                                $("#btnbatal").hide();
                                $("#btnsimpan").show();
                                $("#btnbatalubah").show();

                                document.getElementById("LeadTimeCode").disabled = false;
                                document.getElementById("LeadTimeValue").disabled = false;
                            })

                            $("#btnbatalubah").click(function () {
                                $("#btnubah").show();
                                $("#btnhapus").show();
                                $("#btnbatal").show();
                                $("#btnsimpan").hide();
                                $("#btnbatalubah").hide();

                                document.getElementById("LeadTimeCode").disabled = true;
                                document.getElementById("LeadTimeValue").disabled = true;
                            })
                        })
                    </script>
                }
            </form>
        </div>
        @if (TempData["WarningMessage"] != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    swal("Failed", '@TempData["WarningMessage"]', "warning");
                };
            </script>
        }
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->