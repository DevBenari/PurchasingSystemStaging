@{
    ViewData["Title"] = "List Product";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

@using Microsoft.AspNetCore.Identity;
@using PurchasingSystemStaging.Areas.MasterData.Models;
@using PurchasingSystemStaging.Models;
@using PurchasingSystemStaging.Repositories;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model Pagination<Product>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-cyan">
                <div class="card-header">
                    <h3 class="card-title" style="color:#ffffff"><b>@ViewBag.Title</b></h3>

                    <div class="card-tools">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <a class="btn btn-tool bg-indigo" asp-action="CreateProduct" asp-controller="Product" asp-area="MasterData">
                                <i class="fas fa-plus"></i>
                            </a>
                        }
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form enctype="multipart/form-data" asp-action="Index" asp-controller="Product" method="post" class="form-horizontal">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group date" id="tglAwalPencarian" data-target-input="nearest">
                                        <div class="input-group-append" data-target="#tglAwalPencarian" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                        <input autocomplete="off" readonly value="@ViewBag.tglAwalPencarian" name="tglAwalPencarian" type="text" class="form-control datetimepicker-input" placeholder="Search start date..." />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <div class="input-group date" id="tglAkhirPencarian" data-target-input="nearest">
                                            <div class="input-group-append" data-target="#tglAkhirPencarian" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                            <input autocomplete="off" readonly value="@ViewBag.tglAkhirPencarian" name="tglAkhirPencarian" type="text" class="form-control datetimepicker-input" placeholder="Search end date..." />
                                            <button type="submit" class="btn btn-default" id="btn-search">
                                                <i class="fa fa-search"></i>
                                            </button>
                                            <a class="btn bg-indigo" asp-action="Index" asp-controller="Product" asp-area="MasterData">
                                                <i class="fa-solid fa-arrows-rotate"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-3">
                                <div class="form-group">
                                    <select class="form-control" name="filterOptions" id="btnFilterBy">
                                        <option value="" hidden disabled selected>--Filter by--</option>
                                        <option value="Today" selected=@(ViewBag.SelectedFilter == "Today")>Today</option>
                                        <option value="Last Day" selected=@(ViewBag.SelectedFilter == "Last Day")>Last Day</option>
                                        <option value="Last 7 Days" selected=@(ViewBag.SelectedFilter == "Last 7 Days")>Last 7 Days</option>
                                        <option value="Last 30 Days" selected=@(ViewBag.SelectedFilter == "Last 30 Days")>Last 30 Days</option>
                                        <option value="This Month" selected=@(ViewBag.SelectedFilter == "This Month")>This Month</option>
                                        <option value="Last Month" selected=@(ViewBag.SelectedFilter == "Last Month")>Last Month</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="card-body table-responsive p-0">
                            <table id="tblTemplate" class="table table-hover table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="width: 5%;">No</th>
                                        <th class="text-left" style="width: 15%;">Create Date</th>
                                        <th class="text-left" style="width: 15%;">Product Name</th>
                                        <th class="text-left" style="width: 15%;">Supplier</th>
                                        <th class="text-left" style="width: 5%;">Category</th>
                                        <th class="text-left" style="width: 5%;">Measure</th>
                                        <th class="text-left" style="width: 5%;">Min Stock</th>
                                        <th class="text-left" style="width: 5%;">Max Stock</th>
                                        <th class="text-left" style="width: 5%;">Buffer Stock</th>
                                        <th class="text-left" style="width: 5%;">Stock</th>
                                        <th class="text-left" style="width: 10%;">Retail Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Product in Model.Items)
                                    {

                                        <tr data-href="@Url.Action("DetailProduct", "Product", new {id=Product.ProductId})">
                                            <th class="text-center"></th>
                                            <td class="text-left">@Product.CreateDateTime.ToString("dd MMMM yyyy")</td>
                                            <td class="text-left">@Product.ProductName</td>
                                            <td class="text-left">@Product.Supplier.SupplierName</td>
                                            <td class="text-left">@Product.Category.CategoryName</td>
                                            <td class="text-left">@Product.Measurement.MeasurementName</td>
                                            <td class="text-left">@Product.MinStock</td>
                                            <td class="text-left">@Product.MaxStock</td>
                                            <td class="text-left">@Product.BufferStock</td>
                                            <td class="text-left">@Product.Stock</td>
                                            <td class="text-left">@Math.Truncate(@Product.RetailPrice)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div>
                                <p>Page @Model.CurrentPage of @Model.TotalPages</p>
                                <div>
                                    <!-- Pagination with 10 numbered pages at a time -->
                                    <ul class="pagination">
                                        @if (Model.CurrentPage > 1)
                                        {
                                            <li>
                                                <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
                                            </li>
                                        }

                                        @{
                                            // Determine the range of pagination numbers
                                            int startPage = ((Model.CurrentPage - 1) / 10) * 10 + 1;
                                            int endPage = Math.Min(startPage + 9, Model.TotalPages);
                                        }

                                        @for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="@(i == Model.CurrentPage ? "active" : "")">
                                                <a asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                                            </li>
                                        }

                                        @if (Model.CurrentPage < Model.TotalPages)
                                        {
                                            <li>
                                                <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                                            </li>
                                        }
                                    </ul>

                                    <!-- Pagination navigation for next/previous block -->
                                    <div>
                                        @if (startPage > 1)
                                        {
                                            <a asp-action="Index" asp-route-page="@(startPage - 10)" asp-route-pageSize="@Model.PageSize">Previous 10</a>
                                        }

                                        @if (endPage < Model.TotalPages)
                                        {
                                            <a asp-action="Index" asp-route-page="@(endPage + 1)" asp-route-pageSize="@Model.PageSize">Next 10</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <span class="error">* Double click in the table row to open data</span>
                    </form>
                </div>
                <!-- /.card-body -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Success", '@TempData["SuccessMessage"]', "success");
                        };
                    </script>
                }
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts{
    <script src="~/scripts/tabletemplate.js"></script>
    <script>
       $(document).ready(function () {
            $("#btnFilterBy").data('placeholder');

            $('#btnFilterBy').on('change', function () {
                $('.datetimepicker-input').val('');
                $(this).closest('form').submit();
            });

            $('#tglAwalPencarian').datetimepicker({
                format: 'DD MMMM YYYY',
                timepicker: false,
                enableHours: false,
                ignoreReadonly: true,
                allowInputToggle: true,
                useCurrent: false,
                keepOpen: false,
                mask: true

            })

            $('#tglAkhirPencarian').datetimepicker({
                format: 'DD MMMM YYYY',
                timepicker: false,
                enableHours: false,
                ignoreReadonly: true,
                allowInputToggle: true,
                useCurrent: false,
                keepOpen: false,
                mask: true

            })

            $('#btn-search').on('click', function() {
                $('#btnFilterBy').val('');
            })
            $('.datetimepicker-input').on('keydown paste ', function (e) {
                e.preventDefault();
                return false;
            });


            $('.datetimepicker-input').on('focus', function () {
                $(this).closest('.input-group').find('.input-group-append').click();
            });
       });
    </script>

    <style>
        tr[data-href] {
            cursor: pointer;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");

            rows.forEach(row => {
                row.addEventListener("dblclick", () => {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>

    <style>
        span.error {
            display: block;
            color: #347FC4;
            font-size: 90%;
        }

        tr.error {
            background-color: rgba(255,0,0,0.35);
        }

        /*css for table*/
        .container td {
            vertical-align: top;
        }

        .tablecontainer table {
            width: 100%;
            border-collapse: collapse;
            border-top: 1px solid #BFAEAE;
            border-right: 1px solid #BFAEAE;
        }

        .tablecontainer th {
            border-bottom: 2px solid #BFAEAE;
        }

        .tablecontainer th, .tablecontainer td {
            text-align: center;
            border-left: 1px solid #BFAEAE;
            padding: 5px;
            border-bottom: 1px solid #BFAEAE;
        }

        .ui-widget {
            font-size: 12px !important;
        }
    </style>

    <style>
        .pagination {
            list-style: none;
            display: flex;
            gap: 5px;
            padding: 0;
        }

            .pagination li {
                display: inline-block;
                margin: 0;
            }

                .pagination li a {
                    text-decoration: none;
                    padding: 5px 10px;
                    border: 1px solid #ccc;
                    border-radius: 3px;
                }

                .pagination li.active a {
                    background-color: #007bff;
                    color: #fff;
                    pointer-events: none;
                }
    </style>
}