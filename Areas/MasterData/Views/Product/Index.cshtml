@{
    ViewData["Title"] = "List Product";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

@using Microsoft.AspNetCore.Identity;
@using PurchasingSystemStaging.Areas.MasterData.Models;
@using PurchasingSystemStaging.Models;
@using PurchasingSystemStaging.Repositories;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model Pagination<Product>
@{
    var searchTerm = ViewBag.SearchTerm as string;
    // Hitung nomor awal berdasarkan halaman dan ukuran halaman
    int itemNumber = (Model.CurrentPage - 1) * Model.PageSize + 1;
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-cyan">
                <div class="card-header">
                    <h3 class="card-title" style="color:#ffffff"><b>@ViewBag.Title</b></h3>

                    <div class="card-tools">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <a class="btn btn-tool bg-indigo" asp-action="RedirectToCreate" asp-controller="Product" asp-area="MasterData">
                                <i class="fas fa-plus"></i>
                            </a>
                        }
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form enctype="multipart/form-data" asp-action="RedirectToIndex" asp-controller="Product" method="get" class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="date-container">
                                            @*<label class="date-label" for="startDate">Start Date</label>*@
                                            <input type="date" name="startDate" id="startDate" class="date-input" value="@ViewBag.StartDate" placeholder="Select Start Date">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="date-container form-group">                                            
                                            <input type="date" name="endDate" id="endDate" class="date-input" value="@ViewBag.EndDate" placeholder="Select End Date">
                                            <button type="submit" class="btn btn-default" id="btn-search"><i class="fa fa-search"></i></button>
                                        </div>                                        
                                    </div>
                                    @*<div class="col-md-2">
                                        <label></label>
                                        <button type="reset" class="btn-reset">Reset</button>
                                    </div>
                                    <div class="col-md-2">
                                        <label></label>
                                        <button type="submit" class="btn-submit">Search</button>
                                    </div>*@
                                </div>                                                                
                                @*<div class="form-group">
                                <div class="input-group date" id="tglAwalPencarian" data-target-input="nearest">
                                <div class="input-group-append" data-target="#tglAwalPencarian" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                                <input autocomplete="off" readonly value="@ViewBag.tglAwalPencarian" name="tglAwalPencarian" type="text" class="form-control datetimepicker-input" placeholder="Search start date..." />
                                </div>
                                </div>*@
                            </div>
                            @*<div class="col-md-5">
                                <div class="form-group">
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <div class="input-group date" id="tglAkhirPencarian" data-target-input="nearest">
                                            <div class="input-group-append" data-target="#tglAkhirPencarian" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                            <input autocomplete="off" readonly value="@ViewBag.tglAkhirPencarian" name="tglAkhirPencarian" type="text" class="form-control datetimepicker-input" placeholder="Search end date..." />
                                            <button type="submit" class="btn btn-default" id="btn-search">
                                                <i class="fa fa-search"></i>
                                            </button>
                                            <a class="btn bg-indigo" asp-action="RedirectToIndex" asp-controller="Product" asp-area="MasterData">
                                                <i class="fa-solid fa-arrows-rotate"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <input type="datetime-local" name="endDate" value="@ViewBag.EndDate" />
                                </div>
                            </div>*@
                            <div class="form-group col-md-3">
                                <div class="form-group">
                                    <select class="form-control" name="filterOptions" id="btnFilterBy">
                                        <option value="" hidden disabled selected>--Filter by--</option>
                                        <option value="Today" selected=@(ViewBag.SelectedFilter == "Today")>Today</option>
                                        <option value="Last Day" selected=@(ViewBag.SelectedFilter == "Last Day")>Last Day</option>
                                        <option value="Last 7 Days" selected=@(ViewBag.SelectedFilter == "Last 7 Days")>Last 7 Days</option>
                                        <option value="Last 30 Days" selected=@(ViewBag.SelectedFilter == "Last 30 Days")>Last 30 Days</option>
                                        <option value="This Month" selected=@(ViewBag.SelectedFilter == "This Month")>This Month</option>
                                        <option value="Last Month" selected=@(ViewBag.SelectedFilter == "Last Month")>Last Month</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <form method="get" action="">
                        <div class="row">
                            <div class="col-md-12 input-group">
                                <input autocomplete="off" type="text" class="form-control form-control-border border-width-2" name="searchTerm" value="@searchTerm" placeholder="Search products..." />
                                <button type="submit" class="btn btn-default" id="btn-search">
                                    <i class="fa fa-search"></i>
                                </button>
                                <input type="hidden" name="page" value="1" />
                            </div>
                        </div>
                    </form>
                    <div class="card-body table-responsive p-0">
                        <table id="tblTemplate" class="table table-hover table-head-fixed text-nowrap">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 5%;">No</th>
                                    <th class="text-left" style="width: 15%;">Create Date</th>
                                    <th class="text-left" style="width: 15%;">Product Name</th>
                                    <th class="text-left" style="width: 15%;">Supplier</th>
                                    <th class="text-left" style="width: 5%;">Category</th>
                                    <th class="text-left" style="width: 5%;">Measure</th>
                                    <th class="text-left" style="width: 5%;">Min Stock</th>
                                    <th class="text-left" style="width: 5%;">Max Stock</th>
                                    <th class="text-left" style="width: 5%;">Buffer Stock</th>
                                    <th class="text-left" style="width: 5%;">Stock</th>
                                    <th class="text-left" style="width: 10%;">Retail Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items.Any())
                                {
                                    @foreach (var Product in Model.Items)
                                    {

                                        <tr data-href="@Url.Action("RedirectToDetail", "Product", new { id = Product.ProductId })">
                                            <th class="text-center">@itemNumber</th>
                                            <td class="text-left">@Product.CreateDateTime.ReadStringDate()</td>
                                            <td class="text-left">@Product.ProductName</td>
                                            <td class="text-left">@Product.Supplier.SupplierName</td>
                                            <td class="text-left">@Product.Category.CategoryName</td>
                                            <td class="text-left">@Product.Measurement.MeasurementName</td>
                                            <td class="text-left">@Product.MinStock</td>
                                            <td class="text-left">@Product.MaxStock</td>
                                            <td class="text-left">@Product.BufferStock</td>
                                            <td class="text-left">@Product.Stock</td>
                                            <td class="text-left">@Math.Truncate(@Product.RetailPrice)</td>
                                        </tr>
                                        itemNumber++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3">No products found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @* Pagination *@
                        <div>
                            <p>Page @Model.CurrentPage of @Model.TotalPages</p>
                            <div>
                                <!-- Pagination with 10 numbered pages at a time -->
                                <ul class="pagination">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <a asp-action="RedirectToIndex" asp-route-searchTerm="@ViewBag.SearchTerm" asp-route-startDate="@ViewBag.StartDate" asp-route-endDate="@ViewBag.EndDate" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
                                    }

                                    @if (Model.CurrentPage * Model.PageSize < Model.TotalCount)
                                    {
                                        <a asp-action="RedirectToIndex" asp-route-searchTerm="@ViewBag.SearchTerm" asp-route-startDate="@ViewBag.StartDate" asp-route-endDate="@ViewBag.EndDate" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                                    }

                                    @{
                                        // Determine the range of pagination numbers
                                        int startPage = ((Model.CurrentPage - 1) / 10) * 10 + 1;
                                        int endPage = Math.Min(startPage + 9, Model.TotalPages);
                                    }

                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        @*<li class="@(i == Model.CurrentPage ? "active" : "")">
                                    <a asp-action="RedirectToIndex"
                                    asp-route-searchTerm="@ViewBag.SearchTerm"
                                    asp-route-page="@i"
                                    asp-route-pageSize="@Model.PageSize">@i</a>
                                    </li>*@
                                        <li class="@(i == Model.CurrentPage ? "active" : "")">
                                            <a asp-action="RedirectToIndex" asp-route-encryptedPath="@ViewBag.EncryptedPath" asp-route-page="@i" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@ViewBag.SearchTerm">@i</a>
                                        </li>
                                    }

                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        @*<li>
                                    <a asp-action="RedirectToIndex" asp-route-searchTerm="@searchTerm" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                                    </li>*@
                                        @*<li>
                                    <a asp-action="RedirectToIndex"
                                    asp-route-searchTerm="@ViewBag.SearchTerm"
                                    asp-route-page="@(Model.CurrentPage + 1)"
                                    asp-route-pageSize="@Model.PageSize">Next</a>
                                    </li>*@
                                        <li>
                                            <a asp-action="RedirectToIndex" asp-route-encryptedPath="@ViewBag.EncryptedPath" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@ViewBag.SearchTerm">Next</a>
                                        </li>
                                    }
                                </ul>

                                <!-- Pagination navigation for previous/next blocks -->
                                <div>
                                    @if (startPage > 1)
                                    {
                                        <a asp-action="RedirectToIndex" asp-route-searchTerm="@searchTerm" asp-route-page="@(startPage - 10)" asp-route-pageSize="@Model.PageSize">Previous 10</a>
                                    }

                                    @if (endPage < Model.TotalPages)
                                    {
                                        <a asp-action="RedirectToIndex" asp-route-searchTerm="@searchTerm" asp-route-page="@(endPage + 1)" asp-route-pageSize="@Model.PageSize">Next 10</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <span class="error">* Double click in the table row to open data</span>
                </div>
                <!-- /.card-body -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Success", '@TempData["SuccessMessage"]', "success");
                        };
                    </script>
                }
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts{
    <link href="~/scripts/buttonsejajarindex.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        @*<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>*@
        @* <script src="~/scripts/tabletemplate.js"></script> *@
    <script>
        $(document).ready(function () {
            $("#btnFilterBy").data('placeholder');

            $('#btnFilterBy').on('change', function () {
                $('.datetimepicker-input').val('');
                $(this).closest('form').submit();
            });

            $('#tglAwalPencarian').datetimepicker({
                format: 'DD MMMM YYYY',
                timepicker: false,
                enableHours: false,
                ignoreReadonly: true,
                allowInputToggle: true,
                useCurrent: false,
                keepOpen: false,
                mask: true

            })

            $('#tglAkhirPencarian').datetimepicker({
                format: 'DD MMMM YYYY',
                timepicker: false,
                enableHours: false,
                ignoreReadonly: true,
                allowInputToggle: true,
                useCurrent: false,
                keepOpen: false,
                mask: true

            })

            $('#btn-search').on('click', function () {
                $('#btnFilterBy').val('');
            })
            $('.datetimepicker-input').on('keydown paste ', function (e) {
                e.preventDefault();
                return false;
            });


            $('.datetimepicker-input').on('focus', function () {
                $(this).closest('.input-group').find('.input-group-append').click();
            });
        });
    </script>

    <style>
        tr[data-href] {
            cursor: pointer;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");

            rows.forEach(row => {
                row.addEventListener("dblclick", () => {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            // Ketika input difokuskan
            $(".date-input").focus(function () {
                $(this).prev(".date-label").css({
                    "color": "#007BFF",
                    "font-size": "12px",
                    "transform": "translateY(-20px)",
                    "transition": "0.3s ease-in-out"
                });
            });

            // Ketika input kehilangan fokus dan tidak ada nilai
            $(".date-input").blur(function () {
                if ($(this).val() === "") {
                    $(this).prev(".date-label").css({
                        "color": "#333",
                        "font-size": "14px",
                        "transform": "translateY(0)",
                        "transition": "0.3s ease-in-out"
                    });
                }
            });
        });

        // Inisialisasi Flatpickr
        flatpickr("#startDate", {
            dateFormat: "Y-m-d",
            //defaultDate: "today"
        });

        flatpickr("#endDate", {
            dateFormat: "Y-m-d",
            //defaultDate: "today"
        });

        document.querySelector('.btn-reset').addEventListener('click', function (event) {
            event.preventDefault(); // Mencegah perilaku reset bawaan
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');

            // Atur nilai default (kosongkan atau gunakan tanggal tertentu)
            startDateInput.value = ''; // Atau gunakan nilai default, misalnya: '2024-01-01'
            endDateInput.value = ''; // Atau gunakan nilai default, misalnya: '2024-01-31'
        });
    </script>

    <style>
        span.error {
            display: block;
            color: #347FC4;
            font-size: 90%;
        }

        tr.error {
            background-color: rgba(255,0,0,0.35);
        }

        /*css for table*/
        .container td {
            vertical-align: top;
        }

        .tablecontainer table {
            width: 100%;
            border-collapse: collapse;
            border-top: 1px solid #BFAEAE;
            border-right: 1px solid #BFAEAE;
        }

        .tablecontainer th {
            border-bottom: 2px solid #BFAEAE;
        }

        .tablecontainer th, .tablecontainer td {
            text-align: center;
            border-left: 1px solid #BFAEAE;
            padding: 5px;
            border-bottom: 1px solid #BFAEAE;
        }

        .ui-widget {
            font-size: 12px !important;
        }
    </style>

    <style>
        .pagination {
            list-style: none;
            display: flex;
            gap: 5px;
            padding: 0;
        }

            .pagination li {
                display: inline-block;
                margin: 0;
            }

                .pagination li a {
                    text-decoration: none;
                    padding: 5px 10px;
                    border: 1px solid #ccc;
                    border-radius: 3px;
                }

                .pagination li.active a {
                    background-color: #007bff;
                    color: #fff;
                    pointer-events: none;
                }

        /* Gaya untuk input tanggal */
        .date-input {
            padding: 10px;
            font-size: 16px;
            border: 2px solid #007BFF;
            border-radius: 5px;
            outline: none;
            transition: 0.3s ease-in-out;
        }

            /* Fokus pada input */
            .date-input:focus {
                border-color: #0056b3;
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
            }

        /* Gaya untuk label */
        .date-label {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
            color: #333;
        }

        /* Gaya container */
        .date-container {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            max-width: 300px;
        }

        /* Gaya untuk tombol */
        .btn-submit {
            background-color: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s ease-in-out;
        }

            /* Hover pada tombol */
            .btn-submit:hover {
                background-color: #0056b3;
                box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
            }

        .btn-reset {
            background-color: #f8f9fa;
            color: #000;
            border: 1px solid #ccc;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-left: 10px;
            transition: 0.3s ease-in-out;
        }

            .btn-reset:hover {
                background-color: #e9ecef;
                border-color: #007BFF;
                color: #007BFF;
            }

    </style>
}