@{
    ViewBag.Title = "Delete Category";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

@using PurchasingSystem.Areas.MasterData.ViewModels;


@model CategoryViewModel

<div class="card card-cyan">
    <div class="card-header">
        <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
    </div>


    <form enctype="multipart/form-data" asp-controller="Category" asp-action="DeleteCategory" method="post" class="form-horizontal">
        <div class="card-body">
            <h4>Yakin hapus data ini?</h4>
            <hr />
            <input hidden asp-for="CategoryId" />
            <input hidden asp-for="CategoryCode" />
            <input hidden asp-for="CategoryName" />
            <div class="post">
                <div class="user-block">
                    <span class="username">
                        <a href="#">@Html.DisplayFor(model => model.CategoryName)</a>
                    </span>
                    <span class="description">@Html.DisplayFor(model => model.CategoryCode)</span>
                </div>
                <!-- /.user-block -->
            </div>
        </div>

        @if (TempData["WarningMessage"] != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    swal("Failed", '@TempData["WarningMessage"]', "warning");
                };
            </script>
        }

        <div class="card-footer">
            @*<form asp-action="DeletePengguna" method="post">*@
            <div class="btn btn-default" data-href="@Url.Action("Index", "Category", new { area = "MasterData" })">Cancel</div>
            @*<a class="btn btn-default" asp-action="Index" asp-controller="Category" asp-area="MasterData">Batal</a>*@
            <button type="submit" class="btn btn-danger float-left fw-bold"><div style="color:#ffffff">Hapus</div></button>
            @*</form>*@
        </div>
    </form>
</div>
