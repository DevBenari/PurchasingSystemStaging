    </script>
    <style>
        .swal-button--confirm {
            background-color: #DD6B55;
        }
    </style>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.Message');
            };
        </script>
    }
}